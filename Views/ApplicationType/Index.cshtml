@model IEnumerable<ApplicationType>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-info">ApplicationType List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary">
             Create New Application Type </a>
        </div>
    </div>

    <br /><br />
    @if(Model.Count() > 0)
    {
        <table class="table table-bordered tabletable-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                       Name
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var x in Model)
                {
                    <tr>
                        <td width="50%">@x.Name</td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Application not found.</p>
    }

</div>
