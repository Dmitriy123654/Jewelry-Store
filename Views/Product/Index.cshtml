@model IEnumerable<Product>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-info">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a  asp-action="UpdateAndInsert" class="btn btn-primary">
             <i class="fa-solid fa-plus"></i> &nbsp; Create New Product </a>
        </div>
    </div>

    <br /><br />
    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var x in Model)
                {
                    <tr>
                        <td width="50%">@x.Name</td>
                        <td width="30%">@x.Price</td>
                        <td class="text-center">
                            <div class="w-50% btn-group" role="group">
                                <a  asp-route-Id="@x.CategoryId"asp-action="UpdateAndInsert" class="btn btn-primary mx-2"> <i class="fa-regular fa-pen-to-square"></i> </a>
                                <a  asp-route-Id="@x.CategoryId" asp-action="Delete" class="btn btn-danger mx-2"> <i class="fa-regular fa-trash-can"></i> </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }     else
    {
        <p>No product exist.</p>
    }

</div>
